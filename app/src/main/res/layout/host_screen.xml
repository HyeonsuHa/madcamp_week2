<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Host_screen">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintDimensionRatio="W,16:9"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5">
        <EditText

            android:id="@+id/room_name_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="방 이름을 입력하세요."
            android:fontFamily="@font/cookierun_bold"
            android:textSize="40sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.3"/>
        <TextView
            android:id="@+id/user_number_setting"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="30sp"
            android:fontFamily="@font/cookierun_bold"
            android:text="인원수 설정"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/user_number_setting"
            android:layout_marginTop="5dp"
            app:layout_constraintHeight_percent="0.23">
            <androidx.cardview.widget.CardView
                android:id="@+id/max_user_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="W, 1.4:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:cardBackgroundColor="#E1F5FE"
                app:cardCornerRadius="10sp"
                android:clickable="true">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/max_user_2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cookierun_bold"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:text="2"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/max_user_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="W, 1.4:1"
                app:layout_constraintRight_toLeftOf="@+id/max_user_4"
                app:layout_constraintLeft_toRightOf="@+id/max_user_2"
                app:cardBackgroundColor="#E1F5FE"
                app:cardCornerRadius="10sp"
                android:clickable="true">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/max_user_3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cookierun_bold"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:text="3"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/max_user_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="W, 1.4:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:cardBackgroundColor="#E1F5FE"
                app:cardCornerRadius="10sp"
                android:clickable="true">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/max_user_4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cookierun_bold"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:text="4"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/max_user_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="W, 1.4:1"
                app:layout_constraintLeft_toRightOf="@+id/max_user_4"
                app:layout_constraintRight_toLeftOf="@+id/max_user_6"
                app:cardBackgroundColor="#E1F5FE"
                app:cardCornerRadius="10sp"
                android:clickable="true">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/max_user_5_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cookierun_bold"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:text="5"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/max_user_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="W, 1.4:1"
                app:layout_constraintRight_toRightOf="parent"
                app:cardBackgroundColor="#E1F5FE"
                app:cardCornerRadius="10sp"
                android:clickable="true">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/max_user_6_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cookierun_bold"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:text="6"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/host_room_button"
            android:clickable="true"
            app:cardCornerRadius="10sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:cardBackgroundColor="#039BE5">
            <TextView
                android:id="@+id/make_room_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/cookierun_bold"
                android:textAlignment="center"
                android:textSize="35sp"
                android:text="방 만들기"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>