<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintDimensionRatio="W, 5.45:1">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/custom_layout_const_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/border_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:src="@drawable/snowy"
            android:scaleType="centerInside"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/custom_layout_const_2"
        app:layout_constraintStart_toEndOf="@+id/custom_layout_const_1"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/room_enter_mode_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/custom_layout_line1"
            android:fontFamily="@font/cookierun_bold"
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:text="HOST"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="viewStart"
            />
        <View
            android:id="@+id/custom_layout_line1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            android:background="@color/black"/>
        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/custom_layout_line1"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHorizontal_bias="0.05"
            android:padding="10dp"
            app:cardBackgroundColor="#212121"
            app:cardCornerRadius="20sp">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게임 만들기"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/cookierun_bold"
                android:textSize="10sp"
                android:padding="5dp"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>